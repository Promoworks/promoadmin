<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Update Profile
                <small class="text-muted">Welcome to Promoworks Application</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="zmdi zmdi-home"></i> Promoworks</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
                    <li class="breadcrumb-item active">Updating Profile {{updateClients.clientName}}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <h2 class="card-inside-title">Updating Profile [ {{user.username}} ] </h2>
                        <div class="row clearfix">
                            
                                    {{#each EditProfile}}
                            <div class="col-sm-12">
                                                                <form class="form-horizontal" method="post" action="/profile/UpdateProfile">

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="yd" id="yd" value="{{this._id}}" readonly />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="username" id="username" value="{{this.username}}" readonly />
                                    </div>
                                </div>
                                                     
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="siTeaddress" id="siTeaddress" value="{{this.site_address}}" />
                                    </div>
                                </div>
                                                                                     
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="address" id="address" value="{{this.loc_address}}" />
                                    </div>
                                </div>
                                                                                                                           
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="bio" id="bio" value="{{this.Bio}}" />
                                    </div>
                                </div>
                                                                                                                     
                 
                                                    <br/>                
                                                    <br/>                
                                                                                                                
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-info btn-block btn-outline m-b-10 m-l-5">Edit</button>
                                                </div>
                                                                    
                                                                    
                                                            </form>
                            </div>
                            
                             {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input --> 
    </div>
</section>


