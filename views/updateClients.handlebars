<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Update Details
                <small class="text-muted">Welcome to Promoworks Application</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="zmdi zmdi-home"></i> Promoworks</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
                    <li class="breadcrumb-item active">Updating Client {{updateClients.clientName}}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <h2 class="card-inside-title">Updating Client {{updateClients.clientName}}</h2>
                        <div class="row clearfix">
                            
                                
                            <div class="col-sm-12">
                                                                <form class="form-horizontal" method="post" action="/clients/Clientuser/{{updateClients._id}}">

                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="clientName" id="clientName" value="{{updateClients.clientName}}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="username" id="username" value="{{updateClients.username}}" />
                                    </div>
                                </div>
                                                     
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="clientType" id="clientType" value="{{updateClients.clientType}}" />
                                    </div>
                                </div>
                                                                                     
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="clientOffice" id="clientOffice" value="{{updateClients.clientOffice}}" />
                                    </div>
                                </div>
                                                                                                                     
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="mobile" id="mobile" value="{{updateClients.mobile}}" />
                                    </div>
                                </div>
                                                                                                                                         
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="email" id="email" value="{{updateClients.email}}" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <select class="form-control show-tick" name="status" id="status">
                                        <option value="Select type">-- Please select --</option>
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                </div>
                                                    <br/>                
                                                    <br/>                
                                                                                                                
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-info btn-block btn-outline m-b-10 m-l-5">Edit</button>
                                                </div>
                                                                    
                                                                    
                                                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input --> 
    </div>
</section>



