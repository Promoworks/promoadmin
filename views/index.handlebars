<style>
    .navbar{
            display:none !important;
    }
    #leftsidebar
    {
        display:none !important;
    }
</style>


<div class="authentication">
    <div class="card">
        <div class="body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header slideDown">
                        <div class="logo"><img src="/images/Twiter.jpg" alt="Promoworks" width="15%;"></div>
                        <h1>Promoworks Admin</h1>
                        <ul class="list-unstyled l-social">
                            <li><a href="https://www.facebook.com/PromoWorksOfficial/"><i class="zmdi zmdi-facebook-box"></i></a></li>
                            <li><a href="https://www.pinterest.com/promoworkslive/"><i class="zmdi zmdi-pinterest-box"></i></a></li>                            
                            <li><a href="https://twitter.com/promoworkslive"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>                        
                </div>
                
                    <div class="col-lg-12">

          {{#if success_msg}}
            <div class="alert alert-success text-center">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger text-center">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger text-center">{{error}}</div>
          {{/if}}
    </div>
                                    
                <form class="col-lg-12" action = "/" method="post">
                    <h5 class="title">Sign in to your Account</h5>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" name="username" id="username" autocomplete="off">
                            <label class="form-label">Username</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" id="password" autocomplete="off">
                            <label class="form-label">Password</label>
                        </div>
                    </div>
                    <div>
                        <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-cyan">
                        <label for="rememberme">Remember Me</label>
                    </div>                        
  
                <div class="col-lg-12">
                    <button type="submit" name="submit" class="btn btn-raised btn-primary waves-effect block">SIGN IN</button>
                    <a href="/signup" class="btn btn-raised btn-default waves-effect hidden">SIGN UP</a>                        
                </div>
                                    <div class="col-lg-12 m-t-20">
                    <a class="" href="/forgot">Forgot Password?</a>
                </div>
                    
                    
                </form>
                    
            </div>
        </div>
    </div>
</div>